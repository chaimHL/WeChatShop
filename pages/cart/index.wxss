/* pages/cart/index.wxss */
page {
  padding-bottom: 90rpx;
}
.receive-address-row {
  border-bottom: 1rpx solid #efefef;
}
.receive-address-row .address-button {
  padding: 20rpx;
}
.receive-address-row .address-info-box {
  padding: 20rpx;
}
.receive-address-row .address-info-box .user-info {
  margin-bottom: 6rpx;
}
.cart-box {
  padding: 20rpx;
}
.cart-box .cart-title {
  font-size: 32rpx;
  color: var(--themeColor);
}
.cart-box .cart-item-box .cart-item {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  padding: 10rpx 0;
}
.cart-box .cart-item-box .checkbox-box {
  flex: 1;
}
.cart-box .cart-item-box .cart-img {
  flex: 2;
}
.cart-box .cart-item-box .cart-img image {
  width: 80%;
}
.cart-box .cart-item-box .cart-info-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 4;
}
.cart-box .cart-item-box .cart-info-box .cart-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-bottom: 10rpx;
}
.cart-box .cart-item-box .cart-info-box .cart-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.cart-box .cart-item-box .cart-info-box .goods-price {
  color: var(--themeColor);
  font-size: 32rpx;
}
.cart-box .cart-item-box .cart-info-box .cart-num-tool {
  display: flex;
  align-items: center;
}
.cart-box .cart-item-box .cart-info-box .cart-num-tool .num-edit,
.cart-box .cart-item-box .cart-info-box .cart-num-tool .goods-num {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-box .cart-item-box .cart-info-box .cart-num-tool .num-edit {
  border: 1rpx solid #ddd;
}
.footer-tool-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  padding: 0 0 0 20rpx;
  border-top: 1rpx solid #efefef;
}
.footer-tool-bar .checkbox-all-box {
  flex: 2;
}
.footer-tool-bar .total-price-box {
  flex: 4;
  text-align: right;
  padding-right: 20rpx;
}
.footer-tool-bar .total-price-box .price-text {
  color: var(--themeColor);
  font-size: 34rpx;
}
.footer-tool-bar .order-pay-box {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}
