/* pages/user/index.wxss */
page {
  background-color: #efefef;
}
.user-info-box {
  background-color: var(--themeColor);
}
.user-info-box .user-img-box {
  position: relative;
  height: 45vh;
  overflow: hidden;
}
.user-info-box .user-img-box .user-bg {
  height: 45vh;
  filter: blur(10px);
  transform: scale(1.3);
}
.user-info-box .user-img-box .user-info {
  text-align: center;
  position: absolute;
  top: 30%;
  left: 50%;
  transform: translateX(-50%);
}
.user-info-box .user-img-box .user-info .user-icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user-info-box .user-img-box .user-info .user-name {
  margin-top: 10rpx;
}
.user-info-box .user-img-box .user-btn {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
  border: 1rpx solid #fff;
  border-radius: 16rpx;
  padding: 16rpx 40rpx;
  color: #fff;
}
.user-box {
  position: relative;
  color: #666666;
}
.user-box .user-main {
  position: absolute;
  padding-bottom: 20rpx;
  width: 90%;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
}
.user-box .user-main .user-history-box {
  background-color: #FFFFFF;
  display: flex;
}
.user-box .user-main .user-history-box navigator {
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
}
.user-box .user-main .user-history-box navigator .his-num {
  color: var(--themeColor);
}
.user-box .user-main .user-order-box {
  background-color: #FFFFFF;
  margin-top: 20rpx;
}
.user-box .user-main .user-order-box .order-title {
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #efefef;
}
.user-box .user-main .user-order-box .order-item {
  display: flex;
}
.user-box .user-main .user-order-box .order-item navigator {
  flex: 1;
  padding: 10rpx 0;
  text-align: center;
}
.user-box .user-main .user-order-box .order-item navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user-box .user-main .order-address,
.user-box .user-main .app-share {
  background-color: #FFFFFF;
  margin-top: 20rpx;
  padding: 20rpx;
}
.user-box .user-main .app-info-box {
  background-color: #FFFFFF;
  margin-top: 20rpx;
}
.user-box .user-main .app-info-box .app-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #efefef;
}
.user-box .user-main .app-info-box .app-contact {
  display: flex;
  justify-content: space-between;
}
